<% content_for :title, "Editing wiki post" %>

<div style="max-width: 600px; margin: 40px auto; background: #f8f9fa; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); padding: 32px;">
  <h1 style="text-align: center; color: #343a40; margin-bottom: 24px;">Edit Wiki Post</h1>

  <%= render "form", wiki_post: @wiki_post %>

  <div style="text-align: center; margin-top: 24px;">
    <%= link_to "Show this wiki post", @wiki_post, style: "color: #007bff; text-decoration: none; font-weight: bold;" %> |
    <%= link_to "Back to wiki posts", wiki_posts_path, style: "color: #007bff; text-decoration: none; font-weight: bold;" %>
  </div>
</div>
